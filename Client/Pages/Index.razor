@page "/dashboard"
@inject BlazorAdmin.Shared.AppState AppState
<ContentView>
    <ContentHeaderFragment>
        <div class="relative">
            <input type="text" placeholder="Search..." class="leading-loose w-64 pl-8 text-radial-gray">
            <svg aria-hidden="true" class="absolute ml-2 absolute-center-y" width="18" height="18" viewBox="0 0 18 18">
                <path d="M18 16.5l-5.14-5.18h-.35a7 7 0 1 0-1.19 1.19v.35L16.5 18l1.5-1.5zM12 7A5 5 0 1 1 2 7a5 5 0 0 1 10 0z" class="fill-gray-500"></path>
            </svg>
        </div>
    </ContentHeaderFragment>
    <ContentLeftFragment>Content Left Fragment</ContentLeftFragment>
    <ContentBody>
        <div>
            Main Content Fragment
            <button class="btn btn-secondary" @onclick="@AppState.ToggleRightPanel">Toggle right panel</button>
        </div>
    </ContentBody>
    <ContentRightFragment>
        This is content in the right panel
    </ContentRightFragment>
    <ContentFooter>
        <label class="mr-auto">
            <span>Label</span>
        </label>
        <button class="btn btn-primary">Primary Action</button>
    </ContentFooter>
</ContentView>


@code{
    private void StateHasChangedCall()
		{
			Console.WriteLine("=== OnChange triggered (StateManagementPage.razor.cs)!!!");
			StateHasChanged();
		}

		protected override void OnInitialized()
		{
			AppState.OnChange += StateHasChangedCall;
		}

	
}